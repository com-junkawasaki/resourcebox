{
  "name": "@gftdcojp/shapebox",
  "version": "0.1.0",
  "description": "TypeBox-based RDF/OWL/SHACL-lite shape validation library for TypeScript",
  "license": "Apache-2.0",
  "author": "GFTD Co., JP",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "src", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "pnpm clean && pnpm build && pnpm test && pnpm lint"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.32.35",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "2.1.9",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "rdf",
    "owl",
    "shacl",
    "shex",
    "json-ld",
    "typebox",
    "validation",
    "semantic-web",
    "ontology",
    "typescript",
    "type-safety"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gftdcojp/shapebox.git"
  },
  "homepage": "https://github.com/gftdcojp/shapebox#readme",
  "bugs": {
    "url": "https://github.com/gftdcojp/shapebox/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  }
}
