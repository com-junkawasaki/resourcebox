{
  "name": "@gftdcojp/shapebox-validate",
  "version": "0.1.0",
  "description": "Runtime validation for shapebox - Ajv-based structure validation and ShEx-like shape validation",
  "license": "Apache-2.0",
  "author": "GFTD Co., JP",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
